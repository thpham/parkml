# Database Configuration
# DB_TYPE can be 'sqlite' (default, for development) or 'postgresql' (for production)
DB_TYPE=sqlite

# PostgreSQL Configuration (when DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=parkml
DB_USER=parkml_user
DB_PASSWORD=parkml_password

# SQLite Configuration (when DB_TYPE=sqlite)
SQLITE_PATH=./parkml.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Server Configuration
PORT=5000
NODE_ENV=development

# Security
BCRYPT_ROUNDS=12